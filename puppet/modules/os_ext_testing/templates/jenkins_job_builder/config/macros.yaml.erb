- builder:
    name: link-logs
    builders:
      - shell: |
          #!/bin/sh
          echo "Detailed logs: http://<%= @publish_host%>/ci-artifacts/$LOG_PATH/"


- builder:
    name: scp-artifacts
    builders:
      - shell: |
          #!/bin/bash -ex
          root_path=/var/www/html
          site=<%= @publish_host%>
          source=ci-artifacts/*
          target=$root_path/ci-artifacts/$LOG_PATH
          ssh mlnx_logger@$site mkdir -p $target
          scp -r $source mlnx_logger@$site:$target > /dev/null 2>&1
